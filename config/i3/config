# i3 config file (v4)

# >> Initialization

set $alt         Mod1
set $hyper       Mod3
set $super       Mod4
set $default_gap 0
set $gap_step    5
set $exec        exec --no-startup-id
set $exe         exec --no-startup-id exec
set $viswiz      exec --no-startup-id i3viswiz
set $Kornhe      exec --no-startup-id i3Kornhe
set $run         exec --no-startup-id i3run
set $grun        exec --no-startup-id i3run -g
set $srun        exec --no-startup-id i3run -s
set $fyra        exec --no-startup-id i3fyra
set $fyra_l0     -l 'AB=-360 BD=228 AC=-160'
set $fyra_l9     -l 'AB=-480 BD=300 AC=-160'
set $fyra_l8     -l 'AB=-640 BD=390 AC=-160'
set $fyra_l7     -l 'AB=-920 BD=540 AC=-160'
set $rofi        rofi -show
set $term        urxvt
set $browser     chromium

set $lock        ~/.config/i3/scripts/lock
set $reload      ~/.config/i3/scripts/reload
set $thunar      ~/.config/i3/scripts/thunar

set $dirl  Left
set $dird  Down
set $diru  Up
set $dirr  Right
set $dirla h
set $dirda j
set $dirua k
set $dirra l

font pango:Noto Sans 10

floating_modifier $alt

focus_follows_mouse no

hide_edge_borders both

# >> Panic

bindsym $super+Shift+q kill
bindsym $super+Shift+c reload
bindsym $super+Shift+r restart
bindsym $super+Shift+e exec --no-startup-id \
  "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? \
  This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# >> Power & peripheral

bindsym $super+Control+$alt+l $exe $lock
bindsym $super+Control+$alt+s $exe $lock suspend
bindsym $super+Control+$alt+p $exe dmenu-power
bindsym $super+Control+$alt+t $exe touchpad-toggle

# >> Terminal

bindsym $super+grave          $srun -i dropdown -e '$term -name dropdown'
bindsym $super+Return         $exe i3-sensible-terminal
bindsym $super+Shift+Return   $grun -i cterm -e '$term -name cterm'
bindsym $super+Control+Return $exe $term -name tiledterm

# dropdown terminal
for_window [instance="dropdown"] resize set 900 600
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 5

# >> Program launch

bindsym $super+$alt+space $exe $rofi run
bindsym $alt+space        $exe $rofi drun
bindsym $alt+Tab          $exe $rofi window
bindsym Control+$alt+c    $exe $rofi clipboard -modi "clipboard:greenclip print" -run-command '{cmd}'

bindsym $super+r         $exe dmenu_run

bindsym $hyper+e         $exe $thunar filemanagerA ThunarDetailsView
bindsym $super+e         $exe $thunar filemanagerB ThunarIconView
bindsym $super+Control+e $exe $thunar filemanagerD ThunarDetailsView

# >> Hyper shortcuts

bindsym $hyper+c       $grun -i chromium -e 'chrome-launcher chromium'
bindsym $hyper+$alt+c  $grun -i chromium -e 'chrome-launcher chromium nosecurity'
