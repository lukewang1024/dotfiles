# i3 config file (v4)

# >> Initialization

set $alt         Mod1
set $hyper       Mod3
set $super       Mod4
set $default_gap 10
set $exe         exec --no-startup-id exec
set $fyra        exec --no-startup-id exec i3fyra
set $rofi        rofi -show
set $term        urxvt
set $browser     chromium
set $reload      ~/.config/i3/scripts/reload
set $lock        ~/.config/i3/scripts/lock

set $dirl  h
set $dird  j
set $diru  k
set $dirr  l
set $dirla Left
set $dirda Down
set $dirua Up
set $dirra Right

font pango:UbuntuMono Nerd Font 10

floating_modifier $alt

focus_follows_mouse no

hide_edge_borders both

# >> Panic

bindsym $super+Shift+q kill
bindsym $super+Shift+c reload
bindsym $super+Shift+r restart
bindsym $super+Shift+e exec --no-startup-id \
  "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? \
  This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# >> Power

bindsym $super+Control+$alt+l $exe $lock
bindsym $super+Control+$alt+s $exe $lock suspend
bindsym $super+Control+$alt+p $exe dmenu-power

# >> Terminal

bindsym $super+Return $exe i3-sensible-terminal

# dropdown terminal
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 900 600
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 5
bindsym $super+grave [instance="dropdown"] scratchpad show; [instance="dropdown"] move position center

# >> Program launch

bindsym $super+r   $exe dmenu_run
bindsym $alt+space $exe $rofi run
bindsym $alt+Tab   $exe $rofi window

# >> Focus

bindsym $super+$dirl  $fyra -f l
bindsym $super+$dird  $fyra -f d
bindsym $super+$diru  $fyra -f u
bindsym $super+$dirr  $fyra -f r
bindsym $super+$dirla $fyra -f l
bindsym $super+$dirda $fyra -f d
bindsym $super+$dirua $fyra -f u
bindsym $super+$dirra $fyra -f r

# >> Moving

bindsym $super+Shift+$dirl  $fyra -m l
bindsym $super+Shift+$dird  $fyra -m d
bindsym $super+Shift+$diru  $fyra -m u
bindsym $super+Shift+$dirr  $fyra -m r
bindsym $super+Shift+$dirla $fyra -m l
bindsym $super+Shift+$dirda $fyra -m d
bindsym $super+Shift+$dirua $fyra -m u
bindsym $super+Shift+$dirra $fyra -m r

# >> Resizing

bindsym $super+Control+$dirl  resize shrink width 10 px or 10 ppt
bindsym $super+Control+$dird  resize grow height 10 px or 10 ppt
bindsym $super+Control+$diru  resize shrink height 10 px or 10 ppt
bindsym $super+Control+$dirr  resize grow width 10 px or 10 ppt
bindsym $super+Control+$dirla resize shrink width 10 px or 10 ppt
bindsym $super+Control+$dirda resize grow height 10 px or 10 ppt
bindsym $super+Control+$dirua resize shrink height 10 px or 10 ppt
bindsym $super+Control+$dirra resize grow width 10 px or 10 ppt

# >> Window manipulation

bindsym $super+f fullscreen toggle
bindsym $super+g layout toggle tabbed splith splitv
bindsym $super+space focus mode_toggle

# toggle tiling / floating
bindsym $super+Shift+space $fyra -a

# move workspace between screens
bindsym $super+Control+$alt+Left move workspace to output left
bindsym $super+Control+$alt+Right move workspace to output right

# >> Window rules

for_window [class="^.*"] floating enable

# Container A
for_window [class="Sublime_text"] focus; $fyra -m A
for_window [class="Chromium"] focus; $fyra -m A
for_window [class="Termite"] focus; $fyra -m A

# Container C
for_window [class="Lxappearance"] focus; $fyra -m C

# >> i3-gaps

for_window [class="^.*"] border pixel 3
gaps inner $default_gap
bindsym $super+Control+0 gaps inner current set $default_gap
bindsym $super+Control+minus gaps inner current plus 5
bindsym $super+Control+equal gaps inner current minus 5

# >> Workspace management

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $super+1 workspace $ws1
bindsym $super+2 workspace $ws2
bindsym $super+3 workspace $ws3
bindsym $super+4 workspace $ws4
bindsym $super+5 workspace $ws5
bindsym $super+6 workspace $ws6
bindsym $super+7 workspace $ws7
bindsym $super+8 workspace $ws8
bindsym $super+9 workspace $ws9
bindsym $super+0 workspace $ws10

# move focused container to workspace
bindsym $super+Shift+1 move container to workspace $ws1
bindsym $super+Shift+2 move container to workspace $ws2
bindsym $super+Shift+3 move container to workspace $ws3
bindsym $super+Shift+4 move container to workspace $ws4
bindsym $super+Shift+5 move container to workspace $ws5
bindsym $super+Shift+6 move container to workspace $ws6
bindsym $super+Shift+7 move container to workspace $ws7
bindsym $super+Shift+8 move container to workspace $ws8
bindsym $super+Shift+9 move container to workspace $ws9
bindsym $super+Shift+0 move container to workspace $ws10

# >> Display management

bindsym $super+Control+F1 $exe dmenu-display primary
bindsym $super+Control+F2 $exe dmenu-display secondary
bindsym $super+Control+F3 $exe dmenu-display extend-right
bindsym $super+Control+F4 $exe dmenu-display

# >> Screenshots and recording

bindsym Print              $exe scrot
bindsym Shift+Print        $exe scrot -u
bindsym $super+Print       $exe dmenu-record
bindsym $super+Scroll_Lock $exe "killall screenkey || screenkey"
bindsym $super+Pause       $exe killall ffmpeg

# >> Audio and music definitions

# PulseAudio / pamixer
set $inc pamixer --allow-boost -i 5
set $biginc pamixer --allow-boost -i 15
set $dec pamixer --allow-boost -d 5
set $bigdec pamixer --allow-boost -d 15
set $mute pamixer --allow-boost -t
set $truemute pamixer -m

# mpris
set $toggle playerctl play-pause
set $pause playerctl pause
set $next playerctl next
set $prev playerctl previous
set $lilfor playerctl position 10+
set $bigfor playerctl position 120+
set $lilbak playerctl position 10-
set $bigbak playerctl position 120-
set $beg playerctl position 0

