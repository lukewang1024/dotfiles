# syntax:ssHash

# >> Vim cursor move: Hyper + hjkl

"xte 'key Up'"
  Mod3 + k + Release

"xte 'key Down'"
  Mod3 + j + Release

"xte 'key Left'"
  Mod3 + h + Release

"xte 'key Right'"
  Mod3 + l + Release

# >> Display management

"dmenu-display primary"
  Control+Mod4 + F1

"dmenu-display secondary"
  Control+Mod4 + F2

"dmenu-display extend-right"
  Control+Mod4 + F3

"dmenu-display"
  Control+Mod4 + F4

"xbacklight -dec 10"
  Mod4 + F1

"xbacklight -inc 10"
  Mod4 + F2

"xbacklight -dec 10"
  XF86MonBrightnessDown

"xbacklight -inc 10"
  XF86MonBrightnessUp

# >> Active window resize

"window-resize toggle_maximize"
  Mod3 + Return

"window-resize toggle_maximize"
  Mod4 + Return

"window-resize top_half"
  Mod4 + Up

"window-resize bottom_half"
  Mod4 + Down

"window-resize left_half"
  Mod4 + Left

"window-resize right_half"
  Mod4 + Right

"window-resize left_two_third"
  Shift+Mod4 + Up

"window-resize right_one_third"
  Shift+Mod4 + Down

# >> Active window move

"window-move move_to_prev_display"
  Shift+Mod4 + Left

"window-move move_to_next_display"
  Shift+Mod4 + Right

"window-move move_to_display 0"
  Shift+Mod4 + 1

"window-move move_to_display 1"
  Shift+Mod4 + 2

"window-move move_to_display 2"
  Shift+Mod4 + 3

"window-move move_to_display 3"
  Shift+Mod4 + 4

"window-move move_to_display 4"
  Shift+Mod4 + 5

"window-move move_to_display 5"
  Shift+Mod4 + 6

"window-move move_to_display 6"
  Shift+Mod4 + 7

"window-move move_to_display 7"
  Shift+Mod4 + 8

"window-move move_to_display 8"
  Shift+Mod4 + 9

"window-move move_to_display 9"
  Shift+Mod4 + 0

"window-move show_prev_display"
  Control+Mod4 + Left

"window-move show_next_display"
  Control+Mod4 + Right

"window-move show_display 0"
  Mod4 + 1

"window-move show_display 1"
  Mod4 + 2

"window-move show_display 2"
  Mod4 + 3

"window-move show_display 3"
  Mod4 + 4

"window-move show_display 4"
  Mod4 + 5

"window-move show_display 5"
  Mod4 + 6

"window-move show_display 6"
  Mod4 + 7

"window-move show_display 7"
  Mod4 + 8

"window-move show_display 8"
  Mod4 + 9

"window-move show_display 9"
  Mod4 + 0

# >> Power & peripheral

"lock"
  Control+Alt + q

"lock suspend"
  Control+Alt+Mod4 + s

"lock hibernate"
  Control+Alt+Mod4 + h

"dmenu-power"
  Control+Alt+Mod4 + p

"touchpad-toggle"
  Control+Alt+Mod4 + t

"kbmod"
  Shift+Mod4 + r

# >> System control

"xdotool getactivewindow windowclose"
  Shift+Mod4 + q

# >> Program launch

"rofi -show drun"
  Mod4 + space

"rofi -show run"
  Alt+Mod4 + space

"rofi -show window"
  Control+Mod4 + space

"rofi -show clipboard -modi 'clipboard:greenclip print' -run-command '{cmd}'"
  Control+Alt + c

"xfce4-popup-whiskermenu"
  Control + Menu

"thunar"
  XF86Explorer

"thunar"
  Mod4 + e

"flameshot gui"
  Print

